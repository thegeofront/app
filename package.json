{
    "name": "geon-vpl",
    "version": "0.0.1",
    "description": "",
    "main": "index.js",
    "scripts": {
        "install-all": "cd ../engine npm install && npm install",
        "build-all": "npm run build-std && npm run build-startin && npm run build-std-ts && npm run build",
        "build-startin": "cd ../startin && wasm-pack build --out-dir ../app/public/wasm-modules/startin/ --target web",
        "build-std": "cd ../std && wasm-pack build --out-dir ../app/public/wasm-modules/hello-wasm/ --target web",
        "build-std-ts": "cd ../std-ts && tsc",
        "build": "webpack --mode production --env=prod",
        "build-and-publish-help": "@echo 'A hacky way of publishing. Clone the `thegeofront/thegeofront.github.io` repo in a `www` folder, in the same root as the `app` folder. I use a `cp` command, so please use a linux shell'",
        "build-and-publish": "webpack --mode production --env=prod && npx run publish-github-pages",
        "publish-github-pages": "cd ../www && cp -r -f ../app/public . && git add . && git commit -m 'auto-update' && git push",
        "build-dev": "webpack --env=dev",
        "test": "echo \"Error: no test specified\" && exit 1",
        "watch": "webpack --watch --mode development"
    },
    "keywords": [
        "geon",
        "vpl"
    ],
    "author": "Jos Feenstra",
    "license": "",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.20.0",
        "eslint": "^7.23.0",
        "terser-webpack-plugin": "^5.1.3",
        "ts-loader": "^8.0.5",
        "typescript": "^4.6.2",
        "webpack": "^5.1.3",
        "webpack-cli": "^4.0.0",
        "webpack-dev-server": "^3.11.0"
    },
    "dependencies": {
        "@alenaksu/json-viewer": "^1.0.0"
    }
}
